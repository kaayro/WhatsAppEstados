<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.igitweb.whatstados"
        version     = "1.0.0"
        versionCode = "1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="cli-6.5.0" />
		<preference name="orientation" value="portrait" />
		<preference name="fullscreen" value="true" />
		<preference name="AndroidPersistentFileLocation" value="Compatibility" />

        <name>WhatStados</name>

        <description>
            Encuentra los mejores estados para compartir en WhatsApp o en Redes Sociales. 
        </description>

        <author href="http://igitweb.com/apps" email="info@igitweb.com">
            iGitApps
        </author>
		<icon src="img/whatsapp.png" />
		
		<platform name="android" />
		
		<plugin name="cordova-plugin-file" />
		<plugin name="cordova-plugin-file-transfer" />
		<plugin name="cordova-plugin-dialogs" />
		<gap:plugin name="com-admob-plugin" source="npm"/>
		<plugin name="cordova-plugin-whitelist" source="npm" />
		<gap:plugin name="cordova-plugin-refresh-gallery" source="npm" />
		
		
		
		<allow-navigation href="http://*/*" />
		<allow-navigation href="https://*/*" />
		<allow-navigation href="data:*" />
		
		<access origin="*" />
		
    </widget>