<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.igitweb.whatsappestados"
        version     = "1.0.0"
        versionCode = "1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="cli-6.5.0" />
		<preference name="orientation" value="portrait" />
		<preference name="fullscreen" value="true" />

        <name>WhatsApp Estados</name>

        <description>
            Encuentra los mejores estados para compartir en WhatsApp. 
        </description>

        <author href="http://igitsoft.com" email="info@igitsoft.com">
            iGitApps
        </author>
		<icon src="img/whatsapp.png" />
		
		<platform name="android" />
		
		<plugin name="cordova-plugin-file" />
		<plugin name="cordova-plugin-file-transfer" />
		<gap:plugin name="com-admob-plugin" source="npm"/>
		<plugin name="cordova-plugin-whitelist" source="npm" />
		<plugin name="nl.madebymark.share" source="npm" />
		
		
		<allow-navigation href="http://*/*" />
		<allow-navigation href="https://*/*" />
		<allow-navigation href="data:*" />
		
		<access origin="*" />
		
    </widget>